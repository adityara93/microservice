{
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:44349"
  },
  "ReRoutes": [
    // User Account
    {
      "DownstreamPathTemplate": "/api/User",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44380
        }
      ],
      "UpstreamPathTemplate": "/mndri/usr",
      "UpstreamHttpMethod": [ "POST" ],
      "DangerousAcceptAnyServerCertificateValidator": true
    },
    // Microservices All Services
    {
      "DownstreamPathTemplate": "/api/demografi",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44305
        }
      ],
      "UpstreamPathTemplate": "/mndri/dm",
      "UpstreamHttpMethod": [ "POST", "PUT", "GET" ],
      "DangerousAcceptAnyServerCertificateValidator": true
    },
    {
      "DownstreamPathTemplate": "/api/demografi/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44305
        }
      ],
      "UpstreamPathTemplate": "/mndri/dm/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ],
      "DangerousAcceptAnyServerCertificateValidator": true
    },
    {
      "DownstreamPathTemplate": "/api/photoid",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44325
        }
      ],
      "UpstreamPathTemplate": "/mndri/pid",
      "UpstreamHttpMethod": [ "POST", "PUT", "GET" ],
      "DangerousAcceptAnyServerCertificateValidator": true
    },
    {
      "DownstreamPathTemplate": "/api/photoid/{id}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44325
        }
      ],
      "UpstreamPathTemplate": "/mndri/pid/{id}",
      "UpstreamHttpMethod": [ "GET", "DELETE" ],
      "DangerousAcceptAnyServerCertificateValidator": true
    }
  ]
}